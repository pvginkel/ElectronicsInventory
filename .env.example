# Flask configuration
SECRET_KEY=your-secret-key-here
FLASK_ENV=development
DEBUG=true

# Server configuration
# Number of threads for Waitress WSGI server (production mode)
# For AI-heavy workloads with external API calls, higher thread counts improve concurrency
WAITRESS_THREADS=100

# Database configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/electronics_inventory

# CORS configuration
CORS_ORIGINS=["http://localhost:3000"]

# S3/Ceph configuration
S3_ENDPOINT_URL=http://localhost:9000
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin
S3_FORCE_PATH_STYLE=true
S3_BUCKET_DOCS=inventory-docs
S3_BUCKET_IMAGES=inventory-images

# Celery configuration
CELERY_BROKER_URL=pyamqp://guest@localhost//
CELERY_RESULT_BACKEND=db+postgresql://postgres:postgres@localhost:5432/electronics_inventory

# OpenAI configuration
OPENAI_API_KEY=your-openai-api-key-here